{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        {% if category %}
            <li>
                <a href="{{ path("category_detail", {"slug": category.slug}) }}">
                    {{ category.title }}
                </a>
            </li>
        {% endif %}
        <li class="active">{{ product.title }}</li>
    </ol>
    <h1> {{ product.title }}</h1>
    <img src="{{ product.image }}" />
{% endblock %}
